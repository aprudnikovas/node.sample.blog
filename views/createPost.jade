extends layout

block content

    fieldset
        legend Add Post
        form(method="post", action="/post", enctype="multipart/form-data").form-horizontal
            .control-group
                label.control-label Title
                .controls: input(name="title", type="text", placeholder="Title")
            .control-group
                label.control-label Author
                .controls: input(name="author", type="text" , placeholder="Author")
            .control-group
                label.control-label Content
                .controls: textarea(name="content", rows="5" , placeholder="Content").span5
            .control-group
                label.control-label Image
                .controls: input(type="file", name="file")
            .form-actions
                input.btn.btn-primary(type="submit")
