extends ../layout

block content

    - if(post)

        fieldset
            legend Create Post
            form(method="post", action="/post/update/#{post.id}", enctype="multipart/form-data").form-horizontal

                .control-group
                    label.control-label Title
                    .controls: input(name="title", type="text", placeholder="Title", value="#{post.title}")
                .control-group
                    label.control-label Author
                    .controls: input(name="author", type="text" , placeholder="Author", value="#{post.author}")
                .control-group
                    label.control-label Content
                    .controls: textarea(name="content", rows="5" , placeholder="Content").span5= post.content
                .control-group
                    label.control-label Image
                    .controls: input(type="file", name="file")
                .form-actions
                    input.btn.btn-primary(type="submit")
    - else

        .alert.alert-danger Resource does not exist
